<div class="flex justify-between flex-wrap mt-8 w-full items-center max-w-4xl">
  <h2 class="text-2xl text-gray-800 font-medium mb-4">Daily Stats</h2>
  <div class="flex gap-10 flex-col md:flex-row justify-between w-full">
    <div class="max-w-sm rounded overflow-hidden shadow-xl bg-gradient-to-r from-gray-400 to-gray-300">
      <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2 text-white">Revenue</div>
        <p class="text-white text-base">
          $<%= @quick_stats[:revenue] ? (@quick_stats[:revenue]/100.0).to_s : "0" %>
        </p>
      </div>
    </div>
    <div class="max-w-sm rounded overflow-hidden shadow-xl bg-gradient-to-r from-gray-400 to-gray-300">
      <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2 text-white">Total Sales</div>
        <p class="text-white text-base">
          <%= @quick_stats[:sales] ? (@quick_stats[:sales]).to_s : "0" %>
        </p>
      </div>
    </div>
    <div class="max-w-sm rounded overflow-hidden shadow-xl bg-gradient-to-r from-gray-400 to-gray-300">
      <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2 text-white">Average Sale</div>
        <p class="text-white text-base">
          $<%= @quick_stats[:avg_sale] ? (@quick_stats[:avg_sale]/100.0).to_s : "0" %>
        </p>
      </div>
    </div>
    <div class="max-w-sm rounded overflow-hidden shadow-xl bg-gradient-to-r from-gray-400 to-gray-300">
      <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2 text-white">Items/Sale</div>
        <p class="text-white text-base">
          <%= @quick_stats[:per_sale].to_i %>
        </p>
      </div>
    </div>
</div>
  <div class="w-full mt-16 max-w-4xl">
    <h2 class="text-2xl text-gray-800 font-medium mb-4">Revenue</h2>
    <div data-controller="dashboard" data-dashboard-revenue-value="<%= @revenue_by_day.to_json %>">
      <canvas id="revenueChart"></canvas>
    </div>
    <div class = "flex flex-col w-full">
      <h2 class="text-2xl text-gray-800 font-medium mb-4 mt-8 ">Recent Unfulfilled Orders</h2>
      <div class="overflow-x-auto">
        <table class="min-w-full bg-gray-100 overflow-x-scroll style="border-collapse: separate;border-spacing: 0"">
          <thead>
            <tr>
              <th class="px-6 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Order ID</th>
              <th class="px-6 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Customer</th>
              <th class="px-6 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Date</th>
              <th class="px-6 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Total Amount</th>
            </tr>
          </thead>
          <tbody class="text-gray-600">
            <% @orders.each do |order| %>
              <tr>
                <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                  <div class="text-sm leading-5 text-gray-900"><%= link_to order.id, admin_order_path(order), class: "underline" %></div>
                </td>
                <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                  <div class="text-sm leading-5 text-gray-900"><%= order.customer_email %></div>
                </td>
                <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                  <div class="text-sm leading-5 text-gray-900"><%= order.created_at.strftime("%B %d, %Y %H:%M")  %></div>
                </td>
                <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                  <div class="text-sm leading-5 text-gray-900"><%= (order.total/100.00).to_s %></div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
