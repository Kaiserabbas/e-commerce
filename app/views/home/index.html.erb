<div class="max-w-4xl mx-auto mt-16 bg-gray-800 text-white text-center py-4 rounded-lg">
    <h1 class="text-4xl font-bold mb-4 text-yellow-500">Chand Tailor and Garments</h1>
    <p class="text-xl mb-8">The best e-commerce platform</p>
    <%= link_to "Shop Now", root_path, class:"bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
</div>
<div class="flex flex-wrap justify-center items-center gap-10">
    <%= @main_catagories.each do |catagory| %>
        <%= link_to catagory_path(catagory) do %>
            <div class="flex flex-col mb-4">
                <h2 class="text-white font-medium text-lg text-center mb-6">
                    <%= catagory.name %>
                </h2>
                <%= catagory.image.present? ? image_tag(catagory.image, class: "max-w-lg w-8") : image_tag("https://via.placeholder.com/512") %>               
            </div>
        <% end %>
    <% end %>   
</div>
