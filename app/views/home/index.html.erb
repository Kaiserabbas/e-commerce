<div class="max-w-4xl mx-auto mt-16 bg-gray-800 text-white text-center py-10 rounded-lg">
  <h1 class="text-4xl font-bold mb-4 text-yellow-500">Chand Tailor and Garments</h1>
  <p class="text-xl mb-8">Discover the best e-commerce platform</p>
  <%= link_to "Shop Now", root_path, class:"bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-6 rounded" %>
</div>

<div class="container mx-auto flex flex-wrap justify-center gap-10 my-10">
  <% @main_catagories.each do |catagory| %>
    <%= link_to catagory_path(catagory), class: "w-full md:w-1/3 px-4" do %>
      <div class="flex flex-col mb-8 bg-gray-100 rounded-lg shadow-lg">
        <%= catagory.image.present? ? image_tag(catagory.image, class: "h-64 object-cover rounded-t-lg") : image_tag("https://via.placeholder.com/512", class: "h-64 object-cover rounded-t-lg") %>
        <div class="p-4">
          <h2 class="text-gray-800 font-semibold text-lg text-center mb-4"><%= catagory.name %></h2>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="bg-gray-100 py-20 my-10">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center text-gray-800 mb-8">Customer Testimonials</h2>
    <div class="flex flex-no-wrap overflow-x-auto space-x-6">
      <% 10.times do %> <!-- Generate 10 random testimonials -->
        <div class="min-w-72 bg-white rounded-lg shadow-md p-6 mb-6">
          <p class="text-gray-800 text-base mb-4">
            <%= Faker::Lorem.paragraph(sentence_count: 2) %> <!-- Use Faker gem to generate random text -->
          </p>
          <p class="text-gray-500 text-xs">
            - <%= Faker::Name.name %> <!-- Generate random name -->
          </p>
          <p class="text-gray-300 text-xs">
            <%= Faker::Address.city %>, <%= Faker::Address.country %>  <!-- Generate random city and country -->
          </p>
          <p class="text-gray-300 text-xs">
            <%= Faker::Internet.email %> <!-- Generate random email -->
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="bg-gray-500 text-white my-10 text-center py-20">
  <h2 class="text-3xl font-bold mb-6">Stay Updated</h2>
  <p class="mb-8">Subscribe to our newsletter for the latest updates and offers.</p>
  <%= form_with url: root_path, method: :post, local: true, class: "flex justify-center" do %>
    <%= email_field_tag :email, nil, placeholder: "Enter your email", class: "p-2 rounded-l text-gray-800" %>
    <%= submit_tag "Subscribe", class: "bg-gray-700 hover:bg-gray-800 cursor-pointer text-white font-bold py-2 px-4 rounded-r" %>
  <% end %>
</div>
